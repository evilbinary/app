import os

Import('env')


env = env.Clone(
  w=GetOption('w'),
  ENV = os.environ,
  PATH= [os.environ['PATH'],'/opt/local/bin' ],
  )

source= [
    'test.c'
    ]+env['LIBC']

if env.get('MYLIB'):
    source.append(env.get('MYLIB'))

env.Program('test.elf', source,
    CFLAGS='$CFLAGS $LIBCFLAGS',
    LINKFLAGS= '$LINKFLAGS $USER')

if env.get('ARCHTYPE')=='arm':
    source= [
        'test-musl.c',
        ]+env['LIBC']
    if env.get('MYLIB'):
        source.append(env.get('MYLIB'))

    env.Program('test-musl.elf', source,
        CFLAGS='$CFLAGS $LIBCFLAGS',
        LINKFLAGS= '$LINKFLAGS $USER')



