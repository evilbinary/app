import os

Import('env')


env = env.Clone(
  w=GetOption('w'),
  ENV = os.environ,
  PATH= [os.environ['PATH'],'/opt/local/bin' ],
  )

source=[
    'ls.c',
    '../../libs/libc/libc.a',
    '../../libs/libalgorithm/libalgorithm.a',
    ]

if env.get('MYLIB'):
    source.append(env.get('MYLIB'))

env.Program('ls', source,
    CFLAGS='$CFLAGS -Ilibs/include/c/ ',
    LINKFLAGS= '$LINKFLAGS --entry main -Tuser.ld')

